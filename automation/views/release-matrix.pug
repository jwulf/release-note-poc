doctype html
html(lang='en')
  head
    title Release Notes
    link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/semantic-ui@2.3.3/dist/semantic.min.css')
    link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@3.3.7/dist/css/bootstrap.min.css')
    style.
      table.ui.celled img { display: inline-block; }
      footer { margin: 35px 0 15px 0; text-align: center }
  body
  main#main
    h1.ui.center.aligned.header Release Notes
    .ui.container
      table.ui.celled.table.center.aligned
        thead
          tr
            th Release
            th Issue
            th Already Released In
        tbody
          each item in releases
            tr
              td #{item.release}
              td 
                a(href=item.issue, target='_blank') #{item.issue}
              td #{item.in}
        tfoot
          tr
            th(colspan='3')

include _paginate
